alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias lh="ls -lh"
alias ll="ls -l"
alias la='ls -A'
alias a='ls -lrthG'

# git
alias gl='git pull'
alias glr='git pull --rebase'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gf='git difftool -t vimdiff'

#git extended
alias gwc='git whatchanged -p --abbrev-commit --pretty=medium'

#ruby
alias killruby='killall -9 ruby'
alias reguard='killall -9 guard; be guard'

# rails
#alias scaffold='script/generate nifty_scaffold'
alias rkae='rake'
alias raek='rake'
alias ake='rake'
alias bu='bundle update $1'
alias rt='rake target=6.1 retina=false'
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"

alias rdm="be rake db:migrate"
alias rdtp="be rake db:test:prepare"
alias prepdb="rdm && rdtp"

alias devlog='tail -f log/development.log'

alias c='cd ~/code'
alias p='cd ~/projects'
alias dot='cd ~/dotfiles'
alias pl='cd ~/playground'
alias gocode='cd ~/gocode/src'

#rubymotion
alias raker='rake retina=4'
alias rake_debug='bundle exec rake debug=1 NSZombieEnabled=YES MallocStackLogging=1'

alias rc="spring stop && rails console"

#alias mostused='history | awk '{a[$2]++}END{for(i in a){print a[i] " " i}}' | sort -rn | head'
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'
alias rm='trash'

#show config for rails projects with capistrano
alias staging="cat config/deploy/staging.rb"
alias prod="cat config/deploy/production.rb"
