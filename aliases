# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias lh="ls -lh"
alias ll="ls -l"
alias la='ls -A'
alias a='ls -lrthG'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'
alias gf='git difftool -t vimdiff'

#git extended 
alias gwc='git whatchanged -p --abbrev-commit --pretty=medium'

#ruby
alias killruby='killall -9 ruby'
alias reguard='killall -9 ruby ; guard'

# rails
#alias scaffold='script/generate nifty_scaffold'
alias migrate='rake db:migrate db:test:clone'

alias reload!="touch tmp/restart.txt; echo 'Reloading app'"
alias reload1="touch tmp/restart.txt; echo 'Reloading app'"
alias repow!="touch ~/.pow/restart.txt; echo 'Reloading pow'"
alias devlog='tail -f log/development.log'
alias teslog='tail -f log/test.log'

alias c='cd ~/code'
alias p='cd ~/projects'
alias dot='cd ~/dotfiles'
alias pl='cd ~/playground'

# commands starting with % for pasting from web
alias %=' '

#rubymotion
alias raker='rake retina=4'
alias raked='rake device'

#alias mostused='history | awk '{a[$2]++}END{for(i in a){print a[i] " " i}}' | sort -rn | head'
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'

powit(){
  local basedir=${PWD}
  local vhost=${PWD##*/}
  if [ ! -h ~/.pow/$vhost ]
        then
                echo "pow: Symlinking your app with pow. ${vhost}"
          [ ! -d ~/.pow/${vhost} ] && ln -s $basedir ~/.pow/$vhost
    return 1
  fi
}

